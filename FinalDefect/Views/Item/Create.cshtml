@model FinalDefect.Models.ItemModdel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}



  
<div class="row">
    <div class="col-lg-12">
        <div class="card card-outline-info">
            <div class="card-header">
                <h4 class="m-b-0 text-white">ITEMS REGISTER</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" class="form-horizontal form-bordered">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <label asp-for="id" class="control-label text-right col-md-3"></label>
                        <div class="col-md-9">
                            <input asp-for="id" class="form-control" />
                            <span asp-validation-for="id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="name" class="control-label text-right col-md-3"></label>
                        <div class="col-md-9">
                            <input asp-for="name" class="form-control" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="amount" class="control-label text-right col-md-3"></label>
                        <div class="col-md-9">
                            <input asp-for="amount" class="form-control" />
                            <span asp-validation-for="amount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="offset-sm-3 col-md-9">
                                        <input type="submit" value="Create" class="btn btn-success" />
                                        <input type="reset" value="Reset" class="btn btn-inverse" />
                                        
                                            <a asp-action="Index" class="btn btn-inverse">Back to List</a>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                </div>
            </div>
        </div>

   
</div>
