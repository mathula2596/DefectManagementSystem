@model FinalDefect.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    // ViewBag[ErrorMsg];
}
<form class="form-horizontal form-material" id="loginform" asp-action="Login">
    <h3 class="box-title m-b-20">Sign In</h3>
    <div class="form-group ">
        <div class="col-xs-12">
            <input asp-for="username" class="form-control" required placeholder="Username">

            <span asp-validation-for="username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <input asp-for="password" class="form-control" type="password" required placeholder="Password">
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit" id="log">Login</button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <p style="color:red; align-content:center;"> @ViewBag.ErrorMsg</p>
        </div>
    </div>

</form>


