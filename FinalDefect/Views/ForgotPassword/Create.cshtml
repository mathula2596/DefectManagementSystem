@model FinalDefect.Models.LoginModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="page-wrapper">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Security</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item">Security</li>

            </ol>
        </div>

    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card card-outline-info">
                                    <div class="card-header">
                                        <h4 class="m-b-0 text-white">CHANGE PASSWORD</h4>
                                    </div>
                                    <div class="card-body">
                                        <form asp-action="Create" class="form-horizontal form-bordered">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                            <div class="form-group row" hidden>
                                                <label asp-for="id" class="control-label text-right col-md-3"></label>
                                                <div class="col-md-9">
                                                    <input asp-for="id" class="form-control" value="@ViewBag.id" />
                                                    <span asp-validation-for="id" class="text-danger"></span>
                                                </div>

                                            </div>
                                            @if (ViewBag.usertype == "Admin")
                                            {
                                                <div class="form-group row">
                                                    <label asp-for="username" class="control-label text-right col-md-3"> Username</label>
                                                    <div class="col-md-9">
                                                        <input asp-for="username" class="form-control" value="@ViewBag.username" />
                                                        <span asp-validation-for="username" class="text-danger"></span>
                                                    </div>

                                                </div>
                                            }
                                            else
                                            { <div class="form-group row">
                                                    <label asp-for="username" class="control-label text-right col-md-3"> Username</label>
                                                    <div class="col-md-9">
                                                        <input asp-for="username" class="form-control" value="@ViewBag.username" readonly />
                                                        <span asp-validation-for="username" class="text-danger"></span>
                                                    </div>

                                                </div>
                                            }

                                            <div class="form-group row">
                                                <label asp-for="password" class="control-label text-right col-md-3"> Current Password</label>
                                                <div class="col-md-9">
                                                    <input asp-for="password" class="form-control" type="password" />
                                                    <span asp-validation-for="password" class="text-danger"></span>
                                                </div>

                                            </div>
                                            <div class="form-group row">
                                                <label asp-for="newpassword" class="control-label text-right col-md-3">New Password</label>
                                                <div class="col-md-9">
                                                    <input asp-for="newpassword" class="form-control" type="password" />
                                                    <span asp-validation-for="newpassword" class="text-danger"></span>
                                                </div>

                                            </div>

                                            <div class="form-actions">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="row">
                                                            <div class="offset-sm-3 col-md-9">
                                                                <input type="submit" value="Save" class="btn btn-success" />
                                                                <input type="reset" value="Reset" class="btn btn-inverse" />

                                                                <a asp-action="Index" class="btn btn-inverse">Back to List</a>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>


                        </div>

                    </div>
                </div>
            </div>
        </div>

